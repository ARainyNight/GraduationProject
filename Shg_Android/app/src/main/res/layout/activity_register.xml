<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.activity.RegisterActivity">


    <EditText
        android:id="@+id/registerActivity_username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:maxLines="1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/registerActivity_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:maxLines="1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/registerActivity_password_et_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再输入一次密码"
        android:maxLines="1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/registerActivity_address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入收货地址"
        android:maxLines="1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/registerActivity_pnum_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:maxLines="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:text="注册" />
</LinearLayout>