<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.scan.ScanAddActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>
    <Button
        android:id="@+id/zxing_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_orange"
        android:text="扫一扫"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/scan_name_et"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商品名字"/>

    <EditText
        android:id="@+id/scan_price_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商品价格"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/choose_scan_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_orange"
            android:text="商品类别" />

        <TextView
            android:id="@+id/choose_scan_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="16dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/scan_img"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/scan_release_btn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布"
        android:background="@drawable/button_bg"/>
</LinearLayout>